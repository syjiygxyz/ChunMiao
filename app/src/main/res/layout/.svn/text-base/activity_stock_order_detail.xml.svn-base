<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context="com.ayj.chunmiao.activity.myinformation.shoporder.StockOrderDetailActivity">
    <include layout="@layout/common_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_gray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/ddxqwd"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/hongsejuxing"
                        android:drawablePadding="@dimen/dp_20"
                        android:textColor="@color/edit_text"
                        android:textSize="18dp"
                        android:text="订单信息"/>
                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textColor="@color/edit_text"
                        android:textSize="18dp"
                        android:text="状态"/>
                </LinearLayout>
                <include layout="@layout/single_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="28dp"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="订单编号:"/>
                    <TextView
                        android:id="@+id/tv_aplly_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="下单时间:"/>
                    <TextView
                        android:id="@+id/tv_shop_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="下单店铺:"/>
                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/edit_text"
                        android:text="支付方式:"/>
                </LinearLayout>
            <include layout="@layout/single_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text"
                        android:textSize="18dp"
                        android:text="支付金额:"/>
                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_red"
                        android:textSize="18dp"
                        android:text="￥"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_stock_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dip"
                    android:scrollbars="none"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
