<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context="com.ayj.chunmiao.activity.myinformation.dashang.DashActivity">

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/rl_zengwu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/dashangwu"
            android:drawablePadding="@dimen/dp_4"
            android:text="赠物"
            android:textColor="@color/edit_text"
            android:textSize="@dimen/sp_16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/xiangyoujiant" />
    </RelativeLayout>
    <include layout="@layout/single_line"/>
    <RelativeLayout
        android:id="@+id/rl_aiyib"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/dashangaiyibi"
            android:drawablePadding="@dimen/dp_4"
            android:text="爱e币"
            android:textColor="@color/edit_text"
            android:textSize="@dimen/sp_16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/xiangyoujiant" />
    </RelativeLayout>
    <include layout="@layout/single_line"/>
</LinearLayout>
