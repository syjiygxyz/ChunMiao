<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context="com.ayj.chunmiao.activity.cg.xhj.XhjCgDanActivity">
    <include layout="@layout/common_title_layout"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <cn.finalteam.loadingviewfinal.PtrClassicFrameLayout
            android:id="@+id/pcf_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.finalteam.loadingviewfinal.RecyclerViewFinal
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                app:noLoadMoreHideView="true"
                android:background="@color/white"
                />
        </cn.finalteam.loadingviewfinal.PtrClassicFrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:text="应付:"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/errorColor"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_15"
            android:background="@drawable/common_bt_no_corner"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>
