<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context="com.ayj.chunmiao.activity.myinformation.lxd.LxdActivity">
    <include layout="@layout/common_title_layout"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_72"
        android:layout_marginRight="@dimen/dp_72">
        <RadioButton
            android:id="@+id/rb_ftx"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radio_no_back"
            android:button="@null"
            android:checked="true"
            android:textColor="@drawable/radio_btn_text_color"
            android:text="分摊销"
            />
        <RadioButton
            android:id="@+id/rb_cgx"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radio_no_back2"
            android:button="@null"
            android:textColor="@drawable/radio_btn_text_color"
            android:text="采购销"
            />
        <RadioButton
            android:id="@+id/rb_zx"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radio_no_back"
            android:button="@null"
            android:textColor="@drawable/radio_btn_text_color"
            android:text="自销"
            />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>
</LinearLayout>
