<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    tools:context="com.ayj.chunmiao.activity.myinformation.lxd.UnionShareDetailActivity">
    <include layout="@layout/common_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_gray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/ddxqwd"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/hongsejuxing"
                        android:drawablePadding="@dimen/dp_20"
                        android:textColor="@color/edit_text"
                        android:textSize="18dp"
                        android:text="订单详情"/>
                </LinearLayout>
                <include layout="@layout/single_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="28dp"
                    android:layout_marginBottom="@dimen/dp_15">
                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="订单编号:"/>
                    <TextView
                        android:id="@+id/tv_share_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="分享时间:"/>
                    <TextView
                        android:id="@+id/tv_etime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/edit_text"
                        android:textSize="@dimen/sp_16"
                        android:text="截止有效期:"/>
                    <TextView
                        android:id="@+id/tv_sharetimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/edit_text"
                        android:text="分享人次:"/>
                    <TextView
                        android:id="@+id/tv_xiadan_renci"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/edit_text"
                        android:text="已下单人次:"/>
                    <TextView
                        android:id="@+id/tv_yuliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/edit_text"
                        android:text="余量:"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_lxsc_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_lxsc_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_40"
                        android:lines="2"
                        android:textSize="16sp"
                        android:textColor="@color/blackText"
                        android:ellipsize="end"
                        android:text="品名"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_lxsc_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:lines="1"
                            android:textColor="@color/orange_red"
                            android:textSize="16sp"
                            android:text="￥"/>
                        <TextView
                            android:id="@+id/tv_lxsc_shop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
