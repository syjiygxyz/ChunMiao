<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context="com.ayj.chunmiao.activity.mdlx.MdLxActivity">

    <include layout="@layout/common_title_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">
        <TextView
            android:id="@+id/tv_mdlx_fhd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/wydl_sanjiao"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blackText"
            android:text="发货地"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"/>
        <TextView
            android:id="@+id/tv_mdlx_shijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/wydl_sanjiao"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blackText"
            android:text="上架时间"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"/>
        <TextView
            android:id="@+id/tv_fuwudian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/wydl_sanjiao"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blackText"
            android:text="服务点"/>


    </LinearLayout>

    <include layout="@layout/single_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4">
        <cn.finalteam.loadingviewfinal.PtrClassicFrameLayout
            android:id="@+id/pcf_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.finalteam.loadingviewfinal.RecyclerViewFinal
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                app:noLoadMoreHideView="true"
                android:background="@color/white"
                />
        </cn.finalteam.loadingviewfinal.PtrClassicFrameLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/lxsb"
            android:textColor="@color/orange_red"
            android:textSize="16sp"
            android:text="联销申报" />
    </RelativeLayout>


</LinearLayout>
