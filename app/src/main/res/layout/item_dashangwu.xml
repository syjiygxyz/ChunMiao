<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_dashangwu"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_30"
    android:paddingTop="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.8"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/z5465468461561" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_snid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:ems="9"
                    android:lines="1"
                    android:text="编号:"
                    android:textColor="@color/deep_blue_text" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:ellipsize="end"
                    android:ems="9"
                    android:lines="1"
                    android:text="名称:"
                    android:textColor="@color/deep_blue_text" />
                <TextView
                    android:id="@+id/tv_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="规格:"
                    android:textColor="@color/deep_blue_text" />

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="数量:"
                    android:textColor="@color/deep_blue_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:text="有效期:"
            android:textColor="@color/orange_red" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_receive_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red"
            android:text="门店领取"/>
        <Button
            android:id="@+id/btn_dashang"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_btn_org"
            android:textColor="@color/white"
            android:text="打赏"/>
    </LinearLayout>

</LinearLayout>