<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context="com.ayj.chunmiao.activity.myinformation.MyCenterActivity">

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_center_background"
            android:scaleType="fitXY" />

        <com.ayj.chunmiao.view.RoundImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/menber_loading"
            pv:border_outside_color="@color/material_deep_teal_50"
            pv:border_thickness="1dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_xiaojinku"
            style="@style/MenuPressBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/grzx_xiaojinku"
            android:padding="@dimen/dp_20"
            android:text="0"
            android:textColor="@color/red" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:id="@+id/tv_aiyibi"
            style="@style/MenuPressBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/grzx_aiyibi"
            android:padding="@dimen/dp_20"
            android:text="0"
            android:textColor="@color/red" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:id="@+id/tv_jinbi"
            style="@style/MenuPressBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@mipmap/grzx_jinbi"
            android:padding="@dimen/dp_20"
            android:text="0"
            android:textColor="@color/red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/dark_gray"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
